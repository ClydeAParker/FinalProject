@model IEnumerable<FSWDFinalProject.Data.EF.UserAsset>

@{
    ViewBag.Title = "UserAsset Index";
}
<clear></clear>
<h2 class="center">Assets</h2>

<p class="createBtn center">
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.AssetName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AssetPhoto)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SpecialNotes)
        </th>
        @if (User.IsInRole("Admin"))
        {
        <th>
            @Html.DisplayNameFor(model => model.IsActive)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.DateAdded)
        </th>
        }
        <th>
            @Html.DisplayNameFor(model => model.UserDetail.FullName)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.AssetName)
        </td>
        <td>
            <img src="~/Content/img/CAI/t_@item.AssetPhoto" />
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.SpecialNotes)
        </td>
        @if (User.IsInRole("Admin"))
        {
        <td>
            @Html.DisplayFor(modelItem => item.IsActive)
        </td>

        <td>
            @Html.DisplayFor(modelItem => item.DateAdded)
        </td>
        }
        @*<td>
            @Html.DisplayFor(modelItem => item.AssetYear)
        </td>*@
        <td>
            @Html.DisplayFor(modelItem => item.UserDetail.FullName)
        </td>
        <td>
            @Html.ActionLink("Details", "Details", new { id = item.UserAssetId }) |
            @Html.ActionLink("Edit", "Edit", new { id = item.UserAssetId }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.UserAssetId })
        </td>
    </tr>
}

</table>
